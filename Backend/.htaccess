# Turn on the rewrite engine
RewriteEngine On

# These two lines prevent the rule from applying to actual files or directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# This is the main rule:
# For any request that is not a real file or directory,
# pass it to index.php.
RewriteRule ^(.*)$ index.php [QSA,L]